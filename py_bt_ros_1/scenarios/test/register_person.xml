<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="register_person">
    <!-- 사람 등록 전용 Behavior Tree -->
    <ReactiveSequence>
      <CaptureCameraImage camera_topic="/camera/color/image_raw"/>
      <DisplayYOLODetection/>
      
      <Sequence>
        <!-- 사람 감지 -->
        <IsDetectedSomething target_class="person"
                             confidence_threshold="0.5"
                             cooldown_time="2.0"
                             iou_threshold="0.3"/>
        
        <!-- 등록되지 않은 사람인지 확인 (이미 등록된 사람이면 등록하지 않음) -->
        <Fallback>
          <!-- 이미 등록된 사람이면 통과 (등록 안 함) -->
          <IsRegisteredPerson target_class="person" similarity_threshold="0.75"/>
          
          <!-- 등록되지 않은 사람이면 등록 -->
          <Sequence>
            <!-- ROS 토픽에서 person_name을 받거나, 기본값 사용 -->
            <RegisterPerson target_class="person"/>
            <SendTelegramMessage message="사람이 등록되었습니다!"
                                 interval="0.0"/>
            <CaptureScreen/>
          </Sequence>
        </Fallback>
      </Sequence>
    </ReactiveSequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="CaptureCameraImage"
            editable="true">
      <input_port name="camera_topic"
                  default="psh"/>
    </Action>
    <Action ID="CaptureScreen"
            editable="true"/>
    <Action ID="DisplayYOLODetection"
            editable="true"/>
    <Condition ID="IsDetectedSomething"
               editable="true">
      <input_port name="target_class"
                  default="person"/>
      <input_port name="confidence_threshold"
                  default="0.5"/>
      <input_port name="cooldown_time"
                  default="10.0"/>
      <input_port name="iou_threshold"
                  default="0.3"/>
    </Condition>
    <Condition ID="IsRegisteredPerson"
               editable="true">
      <input_port name="target_class"
                  default="person"/>
      <input_port name="similarity_threshold"
                  default="0.75"/>
    </Condition>
    <Action ID="RegisterPerson"
            editable="true">
      <input_port name="target_class"
                  default="person"/>
      <input_port name="person_name"
                  default=""/>
    </Action>
    <Action ID="SendTelegramMessage"
            editable="true">
      <input_port name="message"
                  default="사람이 감지되었습니다."/>
      <input_port name="interval"
                  default="3.0"/>
    </Action>
  </TreeNodesModel>

</root>

